@model List<MVC_Prices2.Models.Product>

@{
    ViewBag.Title = "Home Page";
}


<h3>La scelta della finestra</h3>


<div class="row">
    <div class="col-md-12 text-center ">
        <div class="row">
            @foreach (var el in Model)
            {
                <div class="col-md-3 col-sm-6">
                    <a href="/Product/Index/@el.Id">
                        <div class="thumbnail white">
                            <div style="height: 150px; width: 120px; margin-right: auto; margin-left: auto;">
                                <img src="~/Content/img/@el.PicUrl" class="zoom" style=" margin-top: auto;" alt="@el.ProductName">
                            </div>
                            <div class="caption" style="height: 120px;">
                                <h4>@el.ProductName</h4>
                                <p>@el.ProductDetail</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 widget productdet" style="height: 300px;">
        <h3>Contatto</h3><hr />
        <div class="user-card contact-item p-md">
            <div class="media">
                <div class="media-left">
                    <div class="avatar avatar-xl avatar-circle">
                        <img src="/Content/img/user.jpg" alt="contact image">
                    </div>
                </div>
                <div class="media-body">
                    <h5 class="media-heading title-color">Serhan Erim</h5>
                    <small class="media-meta">Specialista in esportazione</small>
                    <div class="contact-links m-t-sm">
                        <a href="mailto:s.erim@prolinepvc.com" class="icon icon-circle icon-sm m-b-0" data-toggle="tooltip" title="s.erim@prolinepvc.com" data-placement="top">
                            <i class="zmdi zmdi-email">
                            </i>
                        </a>
                    </div>
                </div>
            </div>

        </div><!-- user-card -->

    </div>
    <div class="col-md-6 widget productdet" style="height: 300px;">
        <h3>Schemi di apertura applicati:</h3>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Fisso nel telaio</th>
                    <th>Anta-<br />Ribalta/Battente</th>
                    <th>Scorrevole</th>
                    <th>Vasistas</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <img src="~/Content/img/fixed.gif" />
                    </td>
                    <td>
                        <img src="~/Content/img/wing.gif" />
                    </td>
                    <td>
                        <img src="~/Content/img/slide.gif" />
                    </td>
                    <td>
                        <img src="~/Content/img/vasistas.gif" style="margin-left: 15px;" />
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
