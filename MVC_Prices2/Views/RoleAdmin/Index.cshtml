@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Index";
}
<div class="col-md-12">
    <h4 class="m-b-lg">
     

        <a href="@Url.Action("Create")" class="btn  btn-success btn-xs pull-right"> <i class="fa fa-plus"></i>Aggiungi nuovo</a>

    </h4>
</div><!-- END column -->
<div class="panel panel-primary">
    <div class="panel-heading">
        Ruolo
    </div>
    <table class="table table-striped">
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th></th>
        </tr>

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3">Non c’e’ un ruolo!</td>
            </tr>
        }
        else
        {
            foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        @using (Html.BeginForm("Delete", "RoleAdmin", new { id = role.Id }))
                        {
                            @Html.ActionLink("Güncelle", "Edit", new { id = role.Id }, new { @class = "btn btn-primary btn-sm" })

                        <button type="submit" class="btn btn-danger btn-sm">Annulla</button>
                        }
                    </td>
                </tr>
            }
        }
    </table>

</div>
