        });

        let sumAmount = 0;
        $('b.amount').each(function () {
            let text = $(this).text().replace(/\D/g, '');
            let amount = parseFloat((text * disc).toFixed(2));
            let amountText = amount.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");

            $(this).text(amountText);
            sumAmount = +sumAmount + +amount;
